<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_img"
        android:layout_width="70dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/img_serial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@mipmap/ic_launcher"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:textSize="28sp"
        android:textStyle="bold"
        android:id="@+id/tv_name"
        android:text="Chernobyl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/card_img"
        app:layout_constraintTop_toTopOf="@id/card_img"
        />
    <TextView
        android:text="S1.E5"
        android:id="@+id/tv_episode"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Mon, Jun 3, 2019"
        android:id="@+id/tv_date"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_episode"
        app:layout_constraintTop_toBottomOf="@id/tv_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:text="1\nDay"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>